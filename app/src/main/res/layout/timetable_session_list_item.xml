<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timetable_session_list_item_time"
        android:text="09:00\n10:00"
        android:textSize="@dimen/list_item_time_size"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timetable_session_list_item_name"
        android:text="CO1407 - Introduction to Programming"
        android:textSize="@dimen/list_item_time_name"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/timetable_session_list_item_time"
        android:layout_toEndOf="@id/timetable_session_list_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timetable_session_list_item_description"
        android:text="Practical with Nearchos Paspallis"
        android:textSize="@dimen/list_item_time_description"
        android:textColor="@color/dark_gray"
        android:layout_toRightOf="@id/timetable_session_list_item_time"
        android:layout_toEndOf="@id/timetable_session_list_item_time"
        android:layout_below="@id/timetable_session_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>